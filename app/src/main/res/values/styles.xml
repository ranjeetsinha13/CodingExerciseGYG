<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <color name="color_light">#1f000000</color>

    <style name="ToolbarDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Toolbar.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlHighlight">@color/color_light</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.AppCompat.PopupMenu.Overflow
        </item>
    </style>

</resources>